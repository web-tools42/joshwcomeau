    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1"
  },
  "dependencies": {
    "@agney/react-inspector": "^4.0.0",
    "@reach/auto-id": "^0.10.4",
    "@reach/tabs": "^0.10.4",
    "@types/lodash-es": "^4.17.3",
    "lodash.merge": "^4.6.2",
    "prism-react-renderer": "^1.1.1",
    "react-simple-code-editor": "^0.11.0"
