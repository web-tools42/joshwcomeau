<h1>New Project</h1>

<%= form_for(@project) do |f|%>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :start_date %><br />
		<%= f.date_select :start_date %>
	</div>
	<div class="field">
		<%= f.label :finish_date %><br />
		<%= f.date_select :finish_date %>
	</div>
	<div class="field">
		<%= f.label :funding_goal %><br />
		<%= f.text_field :funding_goal %>
	</div>
	<label>Project Image</label>
    <%= f.file_field :image %>
	
	<h4>Add Tiers:</h4>
	<div id="tiers">
    <%= f.fields_for :tiers do |tier| %>
      <%= render 'tiers', :f => tier %>
    <% end %>
    <div class="links">
	    <%= link_to_add_association 'add tier', f, :tiers, :partial => "tiers" %>
	  </div>
	</div>

	<div class="action">
		<%= f.submit %>
	</div>
<% end %>
