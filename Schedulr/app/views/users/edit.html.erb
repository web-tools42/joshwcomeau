<div id="edit_my_settings" class='ui form segment'>
  <br><h2 >Edit My Settings</h2><br>

  <%= form_for @user do |f| %>
  
  <div class='ui left icon input'>
  <input id="user_fname" name="user[fname]" type="text" value="<%= current_user.fname %>">
    <i class='user icon'></i>
  </div>
  <br><br>

  <div class='ui left icon input'>
  <input id="user_lname" name="user[lname]" type="text" value="<%= current_user.lname %>">
    <i class='user icon'></i>
  </div>
  <br><br>

  <div class='ui left icon input'>
  <input id="user_email" name="user[email]" type="text" value="<%= current_user.email %>">
    <i class='email basic icon'></i>
  </div>
  <br><br>

  <div class='ui left icon input'>
  <input id="user_password" name="user[password]" type="password">
    <i class='lock basic icon'></i>
  </div>
  <br><br>

  <div class='ui left icon input'>
  <input id="user_password_confirmation" name="user[password_confirmation]" type="password">
    <i class='lock basic icon'></i>
  </div>
  <br><br>

  <input name="commit" type="submit" value="Update User" class="ui button">

<% end %>
</div>

