{
  "extends": ["config:base", ":disablePeerDependencies"],
  "includePaths": [
    "package.json",
    "starters/**",
    "packages/**",
    "www/package.json"
  ],
  "major": {
    "masterIssueApproval": true
  },
  "masterIssue": true,
  "rebaseStalePrs": false,
  "rangeStrategy": "bump",
  "bumpVersion": null,
  "semanticCommitScope": null,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "minor updates in packages",
      "updateTypes": ["minor"]
    },
    {
      "groupName": "patch updates in packages",
      "updateTypes": ["patch"]
    },
    {
      "depTypeList": ["engines"],
      "enabled": false
    }
  ],
  "timezone": "GMT",
  "schedule": "after 10am on Monday"
}
